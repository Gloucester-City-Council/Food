# Gloucester City Council Food Inspection System - Environment Configuration
# Copy this file to .env and update values for your deployment.

# Flask server
PORT=5000
HOST=127.0.0.1
FLASK_DEBUG=1

# Idox Uniform SOAP Licensing Connector
# The server hostname (without protocol/path)
UNIFORM_SERVER=apphst56a.gloucester.idox
# Database alias returned by GetUniformDatabaseAliases
UNIFORM_DATABASE_ID=ORADBHST56a.gloucester.idox/IDOXLVE
# _TEST or _LIVE suffix for the service URL
UNIFORM_STATE_SWITCH=_TEST
# Uniform login credentials
UNIFORM_USERNAME=your-username
UNIFORM_PASSWORD=your-password
# Connection timeout in seconds
UNIFORM_TIMEOUT=30

# Database
DB_PATH=data/food_inspections.db

# Report output directory
REPORT_OUTPUT=data/reports
